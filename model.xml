<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#457b9d"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tDistrict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/abeezee"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="normal" />
                <TextView
                    android:layout_below="@+id/tDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tDate"
                    android:layout_centerHorizontal="true"
                    android:textSize="12sp"
                    android:fontFamily="@font/abeezee"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/tHospital"
                    android:inputType="textNoSuggestions|textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tDate"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:fontFamily="@font/abeezee"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tComplainOf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tHospital"
                    android:layout_alignStart="@+id/tHospital"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/alice"
                    android:includeFontPadding="false"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:lines="3"
                    android:textAllCaps="false"
                    android:textColor="@color/purple"
                    android:textSize="13sp"
                    android:textStyle="normal" />
                <TextView
                    android:id="@+id/tDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tComplainOf"
                    android:layout_alignStart="@+id/tHospital"
                    android:fontFamily="@font/alice"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/Brown"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tTreatment"
                    android:layout_marginTop="1dp"
                    android:inputType="textNoSuggestions|textCapWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tDiagnosis"
                    android:layout_alignStart="@+id/tDiagnosis"
                    android:fontFamily="@font/abeezee"
                    android:lines="1"
                    android:textAllCaps="false"
                    android:textColor="@color/BurlyWood"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tProcedure"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tTreatment"
                    android:lines="2"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>
    </androidx.cardview.widget.CardView>
